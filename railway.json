{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "nixpacks",
      "buildCommand": "cd backend && npm install"
    },
    "deploy": {
      "startCommand": "cd backend && node server.js",
      "healthcheckPath": "/",
      "healthcheckTimeout": 100,
      "restartPolicyType": "always"
    }
  }
  